{
  "name": "unitconverterhub",
  "version": "2.0.0",
  "description": "Unit Converter Hub - Qwik SSR with SEO optimization",
  "type": "module",
  "scripts": {
    "dev": "vite --mode ssr",
    "build": "npm run build.client && npm run build.server",
    "build.client": "vite build",
    "build.server": "vite build --config adapters/express/vite.config.ts --ssr src-qwik/entry.express.tsx",
    "preview": "node dist/server/entry.express.js",
    "start": "node dist/server/entry.express.js"
  },
  "dependencies": {
    "@builder.io/qwik": "^1.18.0",
    "@builder.io/qwik-city": "^1.18.0",
    "compression": "^1.7.4",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^6.0.4"
  }
}
