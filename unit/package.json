{
  "name": "calculinohub",
  "version": "1.0.0",
  "description": "CalculinoHub - Calculator tools for various conversions",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:next": "NODE_OPTIONS='--max-http-header-size=32768' next dev -p 3000",
    "dev:qwik": "vite --config vite.config.qwik.ts",
    "build": "next build",
    "postbuild": "node scripts/postbuild.js",
    "build:qwik": "bash scripts/build-qwik.sh",
    "build:qwik:internal": "vite build --config vite.config.qwik.ts",
    "preview": "vite preview",
    "preview:qwik": "vite preview --config vite.config.qwik.ts",
    "migrate:qwik": "node scripts/migrate-to-qwik.js",
    "migrate:qwik:single": "node scripts/migrate-to-qwik.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@codesandbox/sandpack-react": "^2.17.0",
    "@prisma/adapter-better-sqlite3": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.0",
    "next": "^15.0.0",
    "next-intl": "^3.23.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "remark": "^15.0.0",
    "remark-html": "^16.0.0",
    "vue": "^3.4.0",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.18.0",
    "@builder.io/qwik-city": "^1.18.0",
    "@builder.io/qwik-react": "^0.5.8",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "better-sqlite3": "^11.0.0",
    "ignore": "^7.0.5",
    "prisma": "^7.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
